    <platform
      os="win32"
      ws="win32"
      arch="x86">
      <archiveFormat format="antZip"></archiveFormat>
      <eclipseIniFileContent path="/eclipse/">-showsplash
org.eclipse.platform
--launcher.XXMaxPermSize
